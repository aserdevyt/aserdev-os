# Open grub config in nvim, then confirm before updating grub
function editgrub() {
    sudo nvim /etc/default/grub

    echo -n "Did you actually edit it right tho? (y/N) üëâ "
    read -r ans
    if [[ $ans == "y" || $ans == "Y" ]]; then
        echo "Updating grub... ‚öôÔ∏è"
        sudo grub-mkconfig -o /boot/grub/grub.cfg
        echo "Done ‚úÖ grub updated"
    else
        echo "Ok fine üíÄ grub not touched"
    fi
}
alias grubedit="editgrub"

ytdl480() {
    if [[ $# -eq 0 ]]; then
        echo "Usage: ytdl480 <youtube-url> [<youtube-url> ...]"
        return 1
    fi

    for url in "$@"; do
        yt-dlp \
            -f "bestvideo[height<=480]+bestaudio/best[height<=480]" \
            -o "%(uploader)s/%(uploader)s-%(title)s+%(upload_date)s+%(id)s.%(ext)s" \
            --download-archive "$HOME/.yt-dlp-archive.txt" \
            "$url"
    done
}


